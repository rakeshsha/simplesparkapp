create database TwitterAnalysis;

use TwitterAnalysis

create table KeywordsData( keyword_Id int, keyword varchar(500),isActive boolean, lastHit datetime,subjectId int);
 

create table TwitterData( tweet_Id int,createdDate datetime, longitude varchar(100),latitude varchar(100),country_name varchar(100),city varchar(100), state varchar(100), region varchar(100), keyword_Ids varchar(100), language varchar(100), text varchar(8000), subjectIds varchar(100), twitter_Handle varchar(500), popluarity_Index int);

create table SubjectData( subject_Id int, subjectName varchar(500),isActive boolean, Lasthit datetime);

